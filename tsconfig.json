{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@adapters/*": ["adapters/*"],
      "@core/*": ["core/*"],
      "@demos/*": ["demos/*"],
      "@frontend/*": ["frontend/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "jest", "@types/jest"]
  },
  "include": [
    "core/**/*.ts",
    "adapters/**/*.ts",
    "demos/**/*.ts",
    "layerzero-router/**/*.ts",
    "frontend/**/*.ts",
    "frontend/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.benchmark.js",
    "**/*.demo.js"
  ]
}
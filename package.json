{
  "name": "@finp2p/core",
  "version": "1.0.0",
  "description": "FinP2P Core - Atomic swap transaction routing and processing between blockchains",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "ts-node --watch src/index.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "build:watch": "tsc --watch",
    "test:setup": "node scripts/setup-test-redis.js setup",
    "test:teardown": "node scripts/setup-test-redis.js cleanup",
    "test:find-port": "node scripts/setup-test-redis.js find-port",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "test:adapters": "jest tests/adapters",
    "test:router": "jest tests/router",
    "test:security": "jest tests/security",
    "test:confirmation": "jest tests/confirmation",
    "router:start": "ts-node finp2p-local-router/src/index.ts",
    "benchmark": "ts-node scripts/benchmark-unified.js",
    "benchmark:detailed": "ts-node scripts/benchmark-unified.js --detailed",
    "test:no-docker": "jest --detectOpenHandles --forceExit",
    "test:no-integration": "jest --testPathIgnorePatterns=integration --testPathIgnorePatterns=adapters",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "demo:atomic-swap": "npm run build && node demos/finp2p-atomic-swap-coordination-demo.js",
    "demo:adapters": "npm run build && node demos/hedera-sui-adapters-demo.js",
    "docker:build": "docker build -t finp2p-router .",
    "docker:run": "docker run -p ${PORT:-3000}:${PORT:-3000} finp2p-router",
    "compose:up": "docker-compose -f docker/docker-compose.yml up -d",
    "compose:down": "docker-compose -f docker/docker-compose.yml down",
    "compose:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "compose:build": "docker-compose -f docker/docker-compose.yml build"
  },
  "keywords": [
    "finp2p",
    "blockchain",
    "atomic swap",
    "dlt",
    "sui",
    "hedera",
    "routing",
    "financial",
    "p2p"
  ],
  "author": "Alexander Ryan Plumbridge <ucabrpl@ucl.ac.uk>",
  "license": "MIT",
  "dependencies": {
    "@hashgraph/sdk": "^2.39.0",
    "@mysten/bcs": "^1.6.3",
    "@mysten/sui": "^1.33.0",
    "@owneraio/finp2p-sdk-js": "^0.24.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.1",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/finp2p-implementation.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/finp2p-implementation/issues"
  },
  "homepage": "https://github.com/yourusername/finp2p-implementation#readme"
}
